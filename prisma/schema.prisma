generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  user_id    String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("categories")
}

model List {
  id     String  @id @default(uuid())
  title  String
  total  Decimal
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
}

